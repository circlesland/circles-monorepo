{
  "name": "@circlesland/ceramic",
  "private": true,
  "version": "1.0.0",
  "description": "A library template with TypeScript support",
  "module": "./dist/index.js",
  "main": "./dist/index.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "workspaces": {
    "nohoist": [
      "key-did-provider-ed25519",
      "key-did-resolver",
      "dids",
      "@ceramicnetwork/http-client",
      "@glazed/did-datastore"
    ]
  },
  "scripts": {
    "dev": "vite build -w",
    "build": "vite build",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest --watch",
    "test:prod": "NODE_OPTIONS=--experimental-vm-modules npx jest --passWithNoTests",
    "lint": "eslint --fix --ext .js,.jsx,.ts ."
  },
  "dependencies": {
    "key-did-provider-ed25519": "^2.0.1",
    "key-did-resolver": "^2.0.5",
    "dids": "^3.2.0",
    "@ceramicnetwork/http-client": "^2.2.1",
    "@glazed/did-datastore": "^0.3.1"
  }
}
