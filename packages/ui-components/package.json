{
  "name": "@circlesland/ui-components",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "description": "A Svelte component library for circlesland",
  "svelte": "src/index.ts",
  "module": "dist/index.mjs",
  "main": "dist/index.js",
  "scripts": {
    "dev": "vite build -w",
    "svelte-check": "svelte-check",
    "build": "vite build && npm run build:svelte",
    "build:svelte": "svelte-strip strip src/ dist",
    "prepublishOnly": "npm run svelte-check && npm run build",
    "test": "jest --watch",
    "test:prod": "jest --passWithNoTests",
    "test:cypress": "cypress open"
  },
  "keywords": [
    "component",
    "svelte"
  ],
  "files": [
    "src",
    "dist"
  ],
  "workspaces": {
    "nohoist": [
      "@krowten/svelte-heroicons"
    ]
  },
  "devDependencies": {
    "@krowten/svelte-heroicons": "^0.0.6"
  },
  "dependencies": {
    "@circlesland/xstate-validators": "1.0.0",
    "@circlesland/channels": "1.0.0",
    "@circlesland/interfaces-channels": "1.0.0",
    "autoprefixer": "^10.4.8",
    "postcss": "^8.4.16",
    "tailwindcss": "^3.1.8",
    "svelte-easy-crop": "1.0.7"
  }
}
